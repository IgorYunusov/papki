nuget{
	nuspec{
		id = libpapki;
		version : $(version);
		title: C++ file system library;
		authors: {Ivan Gagis};
		owners: {Ivan Gagis};
		licenseUrl: "https://raw.githubusercontent.com/igagis/papki/master/LICENSE";
		projectUrl: "https://github.com/igagis/papki";
		iconUrl: "https://github.com/igagis/papki/blob/master/logo.svg";
		requireLicenseAcceptance:false;
		summary: C++ file system library;

		description: @"C++ file system library";
		releaseNotes: "Initial release";
		copyright: Copyright 2015 Ivan Gagis;
		tags: { native};
	}
	dependencies {
		packages : {
			libutki/1.0.21;
		};
	}
	files {
		//this is needed to put headers in the base folder
		nestedInclude: {
			#destination = ${d_include}papki;
			"..\src\papki\**\*.hpp"
		};
		
		symbols += {
			//#add-each-file : ::nuget.targets.[${condition}].CopyToOutput;
			#add-folder : ::nuget.targets.[${condition}].BuildTimePath;
			//#destination : ${d_bin}; 
		};
		
		[x86,release] { 
			lib: ..\msvs_solution\Release\libpapki.lib;
			symbols: ..\msvs_solution\libpapki\Release\libpapki.pdb;
		}

		[x86,debug] { 
			lib: ..\msvs_solution\Debug\libpapki.lib;
			symbols: ..\msvs_solution\libpapki\Debug\libpapki.pdb;
		}

		[x64,release] { 
			lib: ..\msvs_solution\x64\Release\libpapki.lib;
			symbols: ..\msvs_solution\libpapki\x64\Release\libpapki.pdb;
		}

		[x64,debug] { 
			lib: ..\msvs_solution\x64\Debug\libpapki.lib;
			symbols: ..\msvs_solution\libpapki\x64\Debug\libpapki.pdb;
		}  
	}
}
